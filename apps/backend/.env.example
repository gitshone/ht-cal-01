# Backend Environment Configuration Example
# Copy this file to .env and update the values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Frontend
FRONTEND_URL=http://localhost:4200

# Database Configuration (Prisma)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ht_cal_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"

# Google Configuration
GOOGLE_CLIENT_ID="your-config-here"
GOOGLE_CLIENT_SECRET="your-config-here"

# MinIO Configuration
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# S3 Configuration (MinIO compatible)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET_NAME=ht-cal-files

# CORS Configuration
CORS_ORIGIN=http://localhost:4200

# Logging
LOG_LEVEL=info
